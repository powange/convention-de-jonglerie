# Variables d'environnement pour Portainer Stack
# Copiez ces variables dans les "Environment variables" de votre stack

# Base de données
MYSQL_ROOT_PASSWORD=changeme123
MYSQL_DATABASE=convention_db
MYSQL_USER=convention_user
MYSQL_PASSWORD=changeme456

# Application
JWT_SECRET=your-super-secret-jwt-key-32-chars-minimum
APP_URL=http://localhost:3000

# Ports (optionnel si vous voulez changer les ports par défaut)
APP_PORT=3000
DB_PORT=3306
ADMINER_PORT=8080


SEND_EMAILS=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-smtp-password"

NUXT_FILE_STORAGE_MOUNT="/uploads"

# ReCAPTCHA (pour formulaires de contact, etc.)
NUXT_PUBLIC_RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
NUXT_RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"

# Google OAuth (optionnel, pour tests en local)
NUXT_OAUTH_GOOGLE_CLIENT_ID="your-google-client-id"
NUXT_OAUTH_GOOGLE_CLIENT_SECRET="your-google-client-secret"
NUXT_OAUTH_GOOGLE_REDIRECT_URL="http://localhost:3000/auth/google"

# Facebook OAuth (optional, pour tests en local)
NUXT_OAUTH_FACEBOOK_CLIENT_ID="your-facebook-app-id"
NUXT_OAUTH_FACEBOOK_CLIENT_SECRET="your-facebook-app-secret"
NUXT_OAUTH_FACEBOOK_REDIRECT_URL="http://localhost:3000/auth/facebook"

# Clés VAPID pour notifications push (paire cohérente)
NUXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@example.com

ENABLE_CRON=true

# Encryption for sensitive data (HelloAsso client secrets, etc.)
ENCRYPTION_SECRET="change-this-to-a-strong-random-secret-key-min-32-chars"
ENCRYPTION_SALT="change-this-salt-to-random-value"

# URL de l'API HelloAsso (par défaut: https://api.helloasso.com)
HELLOASSO_API_URL="https://www.helloasso-sandbox.com"
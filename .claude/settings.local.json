      "mcp__nuxt-ui__get_component_metadata",
      "Bash(npm install:*)",
      "Bash(curl:*)",
      "Bash(docker exec:*)",
      "WebSearch",
      "Bash(docker images:*)",
      "Bash(chmod:*)",
      "Bash(node scripts/translation/mark-todo.js:*)",
      "Bash(npx nuxt prepare)",
      "Bash(docker ps:*)",
      "Bash(npm run i18n:mark-todo:*)",
      "Bash(node -e:*)",
      "Bash(npx web-push generate-vapid-keys)",

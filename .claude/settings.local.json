{
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "80000"
  },
  "permissions": {
    "allow": [
      "Bash(npm run check-i18n:*)",
      "Bash(npm run check-translations:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run format:*)",
      "Bash(npm run test:unit:run:*)",
      "Bash(npm run test:nuxt:run:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "acceptEdits"
  },
  "enabledMcpjsonServers": [
    "nuxt",
    "nuxt-ui",
    "vitest-runner"
  ]
}

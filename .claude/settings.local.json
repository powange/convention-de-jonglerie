{
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "80000"
  },
  "permissions": {
    "allow": [
      "Bash(npm run check-i18n:*)",
      "Bash(npm run check-translations:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run format:*)",
      "Bash(npm run test:unit:run:*)",
      "Bash(npm run test:nuxt:run:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git log:*)",
      "Bash(npm run lint:fix:*)",
      "Bash(ls:*)",
      "Bash(awk:*)",
      "Bash(find:*)",
      "Bash(while read file)",
      "Bash(do sed -i \"/from ''''@@\\/server\\/utils\\/permissions\\/convention-permissions''''/a import { validateConventionId } from ''''@@/server/utils/validation-helpers''''\" \"$file\")",
      "Bash(done)",
      "Bash(npm run build:*)",
      "Bash(npx vitest:*)",
      "Bash(for file in server/api/conventions/**/*.ts)",
      "Bash(do if grep -q \"wrapApiHandler\" \"$file\")",
      "Bash(then echo \"✅ $file\")",
      "Bash(else echo \"❌ $file\")",
      "Bash(fi)",
      "Bash(do echo \"=== $file ===\")",
      "Bash(wc:*)",
      "Bash(for file in server/api/admin/**/*.ts)",
      "Bash(then echo \"✅ $file\" else echo \"❌ $file\" fi done)",
      "Bash(do if ! grep -q \"wrapApiHandler\" \"$file\")",
      "Bash(for file in server/api/admin/users/[id].get.ts server/api/admin/users/[id].put.ts server/api/admin/notifications/index.get.ts server/api/admin/users/index.get.ts server/api/admin/error-logs/index.get.ts server/api/admin/error-logs/[id].patch.ts server/api/admin/backup/restore.post.ts server/api/admin/users/[id].delete.ts server/api/admin/feedback/[id].patch.ts server/api/admin/notifications/push-subscribe.post.ts server/api/admin/notifications/push-unsubscribe.delete.ts server/api/admin/editions/[id]/statistics.get.ts server/api/admin/error-logs/deduplicate-all.post.ts)",
      "Bash(then echo \"$file\")",
      "Bash(for file in server/api/admin/activity.get.ts server/api/admin/assign-meals-volunteers.post.ts server/api/admin/backup/restore.post.ts server/api/admin/error-logs.get.ts \"server/api/admin/error-logs/[id]/resolve.patch.ts\" server/api/admin/import-edition.post.ts server/api/admin/notifications/stats.get.ts server/api/admin/notifications/test.post.ts \"server/api/admin/users/[id].delete.ts\" \"server/api/admin/users/[id]/profile-picture.put.ts\" server/api/admin/users/index.get.ts)",
      "Bash(do wc -l \"$file\")",
      "Bash(for dir in server/api/*/)",
      "Bash(/dev/null -exec sh -c \"grep -q wrapApiHandler \"\"$1\"\" || echo \"\"$1\"\"\" _ {})",
      "Bash(then echo \"$file\" fi done)",
      "Bash(for file in server/api/notifications/stats.get.ts server/api/notifications/mark-all-read.patch.ts server/api/notifications/[id]/unread.patch.ts server/api/notifications/[id]/delete.delete.ts)",
      "Bash(while IFS= read -r file)",
      "Bash(while read f)",
      "Bash(find)",
      "Bash(bash:*)",
      "Bash(do original=\"$file%.bak\" mv \"$file\" \"$original\" done echo \"Fichiers restaurés depuis les backups\")",
      "Bash(node /tmp/migrate-endpoints.mjs:*)",
      "Bash(node /tmp/generate-report.mjs:*)",
      "Bash(node /tmp/fix-broken-files.mjs:*)",
      "SlashCommand(/lint-fix)",
      "SlashCommand(/run-tests)",
      "SlashCommand(/commit-push)",
      "Bash(for file in server/api/editions/[id]/volunteers/applications/*.ts server/api/editions/[id]/volunteers/applications/[applicationId]/*.ts server/api/editions/[id]/volunteers/applications/[applicationId]/teams/[teamId]/*.ts)",
      "Bash(do)",
      "Bash(if [ -f \"$file\" ])",
      "Bash(then)",
      "Bash(echo:*)",
      "Bash(if grep -q \"wrapApiHandler\" \"$file\")",
      "Bash(else)",
      "Bash(for:*)",
      "Bash(grep:*)",
      "Bash(python3:*)",
      "mcp__nuxt-ui__get_component",
      "Bash(node /tmp/update-gestion-pages.mjs:*)",
      "Bash(if grep -q \"layout: ''edition-dashboard''\" \"$file\")",
      "Bash(npm run docker:dev:logs:*)",
      "Bash(npm install)",
      "Bash(node scripts/translation/list-todo-keys.js:*)",
      "Bash(node scripts/translation/apply-translations.js:*)",
      "Bash(cat:*)",
      "Bash(if [ -f \"server/api/conventions/[id]/organizers/[organizerId].delete.ts\" ])",
      "mcp__nuxt-ui__get_component_metadata",
      "Bash(npm install:*)",
      "Bash(curl:*)",
      "Bash(docker exec:*)",
      "WebSearch"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "acceptEdits"
  },
  "enabledMcpjsonServers": [
    "nuxt",
    "nuxt-ui",
    "vitest-runner"
  ]
}

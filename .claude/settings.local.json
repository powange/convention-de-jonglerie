      "Bash(while IFS= read -r file)",
      "Bash(while read f)",
      "Bash(find)",
      "Bash(bash:*)",
      "Bash(do original=\"$file%.bak\" mv \"$file\" \"$original\" done echo \"Fichiers restaurés depuis les backups\")",
      "Bash(node /tmp/migrate-endpoints.mjs:*)",
      "Bash(node /tmp/generate-report.mjs:*)",
      "Bash(node /tmp/fix-broken-files.mjs:*)",
      "SlashCommand(/lint-fix)",
      "SlashCommand(/run-tests)",
      "SlashCommand(/commit-push)",
      "Bash(for file in server/api/editions/[id]/volunteers/applications/*.ts server/api/editions/[id]/volunteers/applications/[applicationId]/*.ts server/api/editions/[id]/volunteers/applications/[applicationId]/teams/[teamId]/*.ts)",
      "Bash(do)",
      "Bash(if [ -f \"$file\" ])",
      "Bash(then)",
      "Bash(echo:*)",
      "Bash(if grep -q \"wrapApiHandler\" \"$file\")",
      "Bash(else)",
      "Bash(for:*)",
      "Bash(grep:*)",
      "Bash(python3:*)",
      "mcp__nuxt-ui__get_component",
      "Bash(node /tmp/update-gestion-pages.mjs:*)",
      "Bash(if grep -q \"layout: ''edition-dashboard''\" \"$file\")",
      "Bash(npm run docker:dev:logs:*)",
      "Bash(npm install)",
      "Bash(node scripts/translation/list-todo-keys.js:*)",
      "Bash(node scripts/translation/apply-translations.js:*)",
      "Bash(cat:*)",

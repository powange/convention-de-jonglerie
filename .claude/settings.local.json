      "Bash(then echo \"$file\")",
      "Bash(for file in server/api/admin/activity.get.ts server/api/admin/assign-meals-volunteers.post.ts server/api/admin/backup/restore.post.ts server/api/admin/error-logs.get.ts \"server/api/admin/error-logs/[id]/resolve.patch.ts\" server/api/admin/import-edition.post.ts server/api/admin/notifications/stats.get.ts server/api/admin/notifications/test.post.ts \"server/api/admin/users/[id].delete.ts\" \"server/api/admin/users/[id]/profile-picture.put.ts\" server/api/admin/users/index.get.ts)",
      "Bash(do wc -l \"$file\")",
      "Bash(for dir in server/api/*/)",
      "Bash(/dev/null -exec sh -c \"grep -q wrapApiHandler \"\"$1\"\" || echo \"\"$1\"\"\" _ {})",
      "Bash(then echo \"$file\" fi done)",

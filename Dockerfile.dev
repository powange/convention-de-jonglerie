# Dockerfile.dev pour l'environnement de développement uniquement
FROM node:22-alpine
RUN apk add --no-cache libc6-compat curl openssl
WORKDIR /app

# Installer les dépendances (si package-lock présent)
COPY package*.json ./
RUN npm ci || true

# Variables d'env et ports de dev
ENV NODE_ENV=development \
    NUXT_HOST=0.0.0.0 \
    NUXT_PORT=3000

EXPOSE 3000 24678

# Démarre Nuxt en mode dev (le code est monté en volume via docker-compose.dev.yml)
CMD ["npm", "run", "dev"]
